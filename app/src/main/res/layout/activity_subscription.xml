<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeChatActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/barra_superiore"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gradient_barrasuperiore" />

    <TextView
        android:id="@+id/text_sottoscrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barra_superiore"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Sottoscriviti ad una chat!"
        android:textColor="#359BEC"
        android:textSize="25dp"
        />

    <ListView
        android:id="@+id/lista_sottoscrizioni"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_sottoscrizione"
        android:layout_centerHorizontal="true"
        android:contextClickable="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:visibility="gone"/>

</RelativeLayout>