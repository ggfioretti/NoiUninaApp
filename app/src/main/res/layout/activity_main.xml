<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity"
    android:background="@drawable/background_login"
    >

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_3" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Noi UNINA"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/textViewLoginName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:text="Login"
        android:textColor="#359BEC"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLoginName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#D8FFFFFF"
        android:drawableLeft="@drawable/ic_action_userr"
        android:ems="13"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="#6C6A6A" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etemail"
        android:layout_alignStart="@+id/etemail"
        android:layout_alignLeft="@+id/etemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#D8FFFFFF"
        android:drawableLeft="@drawable/ic_action_pwd"
        android:ems="13"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="#6C6A6A" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#359BEC"
        android:ems="10"
        android:text="Entra in            Noi UNINA"
        android:textColor="@color/white"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/tvRegistrati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:text="Non sei ancora registrato? Clicca qui!"
        android:textColor="#359BEC"
        android:textSize="18dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:visibility="gone"/>

</RelativeLayout>